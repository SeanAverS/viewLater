{
  "manifest_version": 3,
  "name": "My Read Later",
  "version": "1.0",
  "description": "A personal view later and bookmark manager extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"]
}