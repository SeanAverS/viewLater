{
  "manifest_version": 3,
  "name": "viewLater",
  "version": "1.0",
  "description": "A personal bookmark manager extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting", 
    "storage"
  ],
  "host_permissions": ["<all_urls>"]
}